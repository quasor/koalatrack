<h1>New milestone</h1>

<%= error_messages_for :milestone %>

<% form_for(@milestone) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_area :name %>
  </p>

  <p>
    <b>Due on</b><br />
    <%= f.date_select :due_on %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', milestones_path %>
