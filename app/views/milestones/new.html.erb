<h1>New milestone</h1>

<%= error_messages_for :milestone %>

<% form_for(@milestone) do |f| %>
  <p><label><b>Name</b></label><%= f.text_field :name %></p>
  <p><label><b>Due on</b></label><%= f.date_select :due_on %></p>
  <p><label><b>Group: </b></label><%= f.select(:group_id, Group.find(:all).collect {|p| [ p.name, p.id ] } ) %></p>

  <p><label>&nbsp;</label><%= f.submit "Create" %> or <%= link_to 'Back', milestones_path %></p>
<% end %>

<%= link_to 'Back', milestones_path %>
