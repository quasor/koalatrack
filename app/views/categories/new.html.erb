<h1>New category</h1>

<%= error_messages_for :category %>

<% form_for(@category) do |f| %>
	<%= f.hidden_field :parent_id %>
  <p>
    <label><b>Name: </b></label>
    <%= f.text_field :name %>
  </p>

<% if false%>	
	<p><label><b>Group: </b></label> <%= f.select(:group_id, ( [[ 'Global', nil ]] + Group.find(:all).collect {|p| [ p.name, p.id ] } ) ) %></p>
<% end %>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', :back %>
