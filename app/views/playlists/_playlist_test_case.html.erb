<% test_case = playlist_test_case.test_case%>
<% test_case_executions = playlist_test_case.test_case_executions %>
<tr id="playlist_test_case_<%=playlist_test_case.id%>">
<td>
		<%= check_box_tag 'pickme', playlist_test_case.id, false, :onClick => 'foo(this)' %>
</td>
<td>
	<%#= link_to_remote 'Fail', :url => fail_playlist_test_case_path(:id => playlist_test_case), :method => :put %>
	<% form_for(TestCaseExecution.new(:playlist_id => @playlist.id, :test_case_id => test_case.id) ) do |f| %><%= f.select :result, [['Execute...',''], ['Pass',1], ['Fail',2], ['Blocked',3],['Not Implemented',4]], {}, {:onChange => "$('playlist_test_case_oid_#{playlist_test_case.object_id}').toggle();"} %>
	  <div id="playlist_test_case_oid_<%=playlist_test_case.object_id%>" style="display:none">
	    <b>Bug</b><br />
	    <%= f.text_field :bug_id %>
	  </p>

	  <p>
	    <b>Comment</b><br />
	    <%= f.text_area :comment %>
	  </p>

	  <p>
	    <%= f.submit "Save" %>
	  </p>
	    <%= f.hidden_field(:playlist_id) %>
	    <%= f.hidden_field(:test_case_id) %>
	    <%= f.hidden_field :test_case_version %>
	  </div>
	<% end %>
</td>
  <td><%=h playlist_test_case.test_case.category.name if playlist_test_case.test_case.category %></td>
  <td><%=link_to test_case.title, test_case %></td>
  <td><%=h playlist_test_case.user.login if playlist_test_case.user_id %></td>
<td id="playlist_test_case_<%=playlist_test_case.id%>_results">
	<%= test_case_executions.last.to_html if test_case_executions.last%>
	<% if test_case_executions.empty? %>
		Not Run
	<% else %>
	<% end %>
	<%= link_to_function 'History', "$('playlist').getElementsByClassName('playlist_test_case_#{playlist_test_case.id}').invoke('toggle');"%>
</td>
	<td><%=test_case_executions.last.bug_url if test_case_executions.last%></td>
	<td><%=h test_case_executions.last.created_at if test_case_executions.last %></td>
  <td><%=h test_case.priority_in_feature %></td>
  <td><%=h test_case.priority_in_product %></td>
  <td><%= link_to 'Remove', playlist_test_case, :confirm => 'Are you sure?', :method => :delete %></td>
</tr>
	<%= render :partial => 'playlist_test_cases/results', :collection => test_case_executions, :locals => {:class_name => "playlist_test_case_#{playlist_test_case.id}"} %>
