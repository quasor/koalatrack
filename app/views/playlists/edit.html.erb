<h1>Editing playlist</h1>

<%= error_messages_for :playlist %>

<% form_for(@playlist) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>User</b><br />
    <%= f.select(:user_id, User.find(:all).collect {|p| [ p.login, p.id ] } ) %>
  </p>

  <p>
    <b>Milestone</b><br />
    <%= f.select(:milestone_id, Milestone.find(:all).collect {|p| [ "#{p.name}", p.id ] } ) %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @playlist %> |
<%= link_to 'Back', playlists_path %>
