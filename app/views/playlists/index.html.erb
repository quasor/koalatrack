<h1>My Playlists</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>User</th>
    <th>Milestone</th>
  </tr>

<% for playlist in @my_playlists %>
  <tr>
    <td><%=link_to playlist.title, playlist %></td>
    <td><%=h playlist.description %></td>
    <td><%=h playlist.user.login %></td>
    <td><%=h playlist.milestone_id %></td>
    <td><%= link_to 'Clone', new_playlist_path(:id => playlist.id) %></td>
    <td><%#= link_to 'Destroy', playlist, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<tr>
	<td colspan=5>
		<h1>Other playlists</h1>
	</td>
</tr>
<% for playlist in @playlists %>
  <tr>
    <td><%=link_to playlist.title, playlist %></td>
    <td><%=h playlist.description %></td>
    <td><%=h playlist.user.login %></td>
    <td><%=h playlist.milestone_id %></td>
    <td><%= link_to 'Clone', new_playlist_path(:id => playlist.id) %></td>
    <td><%#= link_to 'Destroy', playlist, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

