<h2><%=h @playlist.title %></h2>
  <%=h @playlist.description %>
<br />
<div>
	  <b>Owner:</b>
  <%=h @playlist.user.login %>
	<% if @playlist.milestone %>
  	<b>Milestone:</b>
  	<%=h @playlist.milestone.name %>
	<% end %>
</div>
<% @playlist_test_cases =  @playlist.playlist_test_cases.sort_by(&:position) %>
<% for playlist_test_case in @playlist_test_cases %>

<br /><br />
<h3><%= playlist_test_case.test_case.title %> (Pri <%= playlist_test_case.test_case.priority_in_feature %>)</h3>
<blockquote>
<%= playlist_test_case.test_case.body %>
</blockquote>
<% end %>

